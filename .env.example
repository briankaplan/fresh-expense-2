# Application
NODE_ENV=development
PORT=3000

# Database
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_DB=expenses
MONGODB_URI=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@mongodb:27017/${MONGODB_DB}?authSource=admin&retryWrites=true&w=majority

# Security
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=24h
JWT_ISSUER=your-app-name
JWT_AUDIENCE=your-app-name
ENCRYPTION_KEY=your-encryption-key
ENCRYPTION_IV=your_encryption_iv

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_PHOTOS_REDIRECT_URI=http://localhost:3000/auth/google/photos/callback

# Cloudflare R2
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=your_r2_public_url
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_JURISDICTION=s3

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com

# Teller API
TELLER_APPLICATION_ID=your_teller_app_id
TELLER_API_URL=https://api.teller.io
TELLER_API_VERSION=2020-10-12
TELLER_ENVIRONMENT=sandbox
TELLER_WEBHOOK_URL=your_webhook_url
TELLER_SIGNING_SECRET=your_signing_secret
TELLER_SIGNING_KEY=your_signing_key
TELLER_CERT_PATH=/app/credentials/teller_certificate.pem
TELLER_KEY_PATH=/app/credentials/teller_private_key.pem
TELLER_API_KEY=your-teller-api-key

# Frontend
VITE_API_URL=http://localhost:3000/api
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Optional: External Services
# SENDGRID_API_KEY=your-sendgrid-key
# STRIPE_SECRET_KEY=your-stripe-key
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Configuration
API_URL=http://localhost:3000
API_VERSION=v1

# Database
MONGO_USER=admin
MONGO_PASSWORD=password

# Teller API
TELLER_ENV=sandbox

# Cloudflare R2
R2_BUCKET=expense-files 