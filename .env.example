# Application
NODE_ENV=production
PORT=3000

# MongoDB
MONGODB_USER=admin
MONGODB_PASSWORD=your_secure_password_here
MONGODB_DB=fresh-expense
MONGODB_URI=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@mongodb:27017/${MONGODB_DB}?authSource=admin&retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_secure_jwt_secret_min_32_chars
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_32_byte_encryption_key
ENCRYPTION_IV=your_16_byte_iv

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# R2 Storage
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=fresh-expense-files
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev
R2_ENDPOINT=https://${R2_ACCOUNT_ID}.r2.cloudflarestorage.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@fresh-expense.com

# Teller API Configuration
TELLER_APPLICATION_ID=app_xxxxxxxxxxxxxxxx
TELLER_API_URL=https://api.teller.io
TELLER_API_VERSION=2020-10-12
TELLER_ENVIRONMENT=sandbox
TELLER_CERT_PATH=/app/certs/teller_certificate.pem
TELLER_KEY_PATH=/app/certs/teller_private_key.pem
TELLER_SIGNING_SECRET=your_teller_signing_secret
TELLER_SIGNING_KEY=your_teller_signing_key

# Frontend Variables
VITE_API_URL=http://localhost:3000/api
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here 