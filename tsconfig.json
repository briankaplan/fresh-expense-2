{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@fresh-expense/types": [
        "./packages/types/src"
      ]
    }
  },
  "include": [
    "apps",
    "packages",
    "vite.config.ts",
    "vitest.config.ts",
    ".eslintrc.cjs"
  ]
}