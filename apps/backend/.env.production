# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
API_PREFIX=api

# Authentication
JWT_SECRET=${JWT_SECRET}
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
ENCRYPTION_KEY=${ENCRYPTION_KEY}
ENCRYPTION_IV=${ENCRYPTION_IV}

# Database Configuration
MONGODB_URI=${PROD_MONGODB_URI}
MONGODB_DB=expense-v2

# Frontend Configuration
FRONTEND_URL=https://fresh-expense.pages.dev
CORS_ORIGIN=https://fresh-expense.pages.dev
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Google OAuth Configuration
GOOGLE_CLIENT_ID=${GMAIL_CLIENT_ID_1}
GOOGLE_CLIENT_SECRET=${GMAIL_CLIENT_SECRET_1}
GOOGLE_REDIRECT_URI=https://fresh-expense.pages.dev/auth/google/callback

# Storage Configuration (Cloudflare R2)
R2_ACCOUNT_ID=${CLOUDFLARE_ACCOUNT_ID}
R2_ACCESS_KEY_ID=${PROD_R2_ACCESS_KEY_ID}
R2_SECRET_ACCESS_KEY=${PROD_R2_SECRET_ACCESS_KEY}
R2_BUCKET_NAME=${PROD_R2_BUCKET_NAME}
R2_PUBLIC_URL=${PROD_R2_PUBLIC_URL}
R2_REGION=auto
R2_ENDPOINT=${PROD_R2_ENDPOINT}

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=${GMAIL_CLIENT_ID_1}
SMTP_PASSWORD=${GMAIL_CLIENT_SECRET_1}
SMTP_FROM="Expense Tracker <${GMAIL_CLIENT_ID_1}>"
EMAIL_FROM=${GMAIL_CLIENT_ID_1}

# SendGrid Configuration
SENDGRID_API_KEY=${SENDGRID_API_KEY}
RECEIPT_EMAIL=receipts@tallyups.com

# Teller API Integration
TELLER_API_URL=https://api.teller.io
TELLER_APPLICATION_ID=${PROD_TELLER_APPLICATION_ID}
TELLER_API_VERSION=2020-10-12
TELLER_ENVIRONMENT=production
TELLER_SIGNING_SECRET=${PROD_TELLER_SIGNING_SECRET}
TELLER_SIGNING_KEY=${PROD_TELLER_SIGNING_KEY}
TELLER_REDIRECT_URI=https://fresh-expense.pages.dev/api/teller/callback

# AI Services Configuration
HUGGINGFACE_API_KEY=${PROD_HUGGINGFACE_API_KEY}
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2
BERT_SERVER_URL=http://localhost:5555
BERT_SERVER_PORT=5555
BERT_MODEL_PATH=./models/bert-base-uncased

# Rate Limiting
RATE_LIMITS={"AI":{"HUGGINGFACE":{"INFERENCE":{"maxRequests":30,"timeWindow":60000},"INFERENCE_LARGE":{"maxRequests":8,"timeWindow":60000},"DAILY":{"maxRequests":1000,"timeWindow":86400000,"maxBurst":1000}},"BERT":{"maxRequests":50,"timeWindow":60000}}}

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_MODE=false
